{
    "project_name": "Boilerplate",

    "timezone": "America/Montreal",

    "dev_mode": true,

    "cache": {
        "active": false,
        "types": ["memcache", "redis", "apc"],
        "prefix": "boilerplate"
    },

    "logger": {
        "active": true,
        "levels": {
            "debug": true
        }
    },

    "email": {
        "default_from": {
            "email": null,
            "name": null
        }
    },

    "locales": {
        "languages": {
            "fr": {
                "locale": "fr-FR"
            },
            "en": {
                "locale": "en-US"
            }
        },
        "default_language": "fr"
    },

    "translations": {
        "paths": [
            "translations/city/",
            "vendor/locomotivemtl/charcoal-app/translations/charcoal/app/"
        ]
    },

    "view": {
        "paths": [
            "templates/",
            "vendor/mcaskill/charcoal-support/views/",
            "vendor/beneroch/charcoal-attachment/templates/",
            "vendor/beneroch/charcoal-utils/templates/",
            "vendor/beneroch/charcoal-attachment/templates/",
            "vendor/locomotivemtl/charcoal-admin/templates/",
            "vendor/locomotivemtl/charcoal-app/templates/"
        ],
        "default_engine": "mustache",
        "default_controller": "\\City\\Template\\Generic"
    },

    "templates": [
        {
            "value": "generic",
            "label": {
                "en": "Generic",
                "fr": "Générique"
            },
            "template": "city/template/generic",
            "controller": "\\Boilerplate\\Template\\Generic"
        },
        {
            "value": "home",
            "label": {
                "en": "Front Page",
                "fr": "Page d'accueil"
            },
            "template": "city/template/home",
            "controller": "\\Boilerplate\\Template\\Home"
        },
        {
            "value": "news-list",
            "label": {
                "en": "News List",
                "fr": "Liste des actualités"
            },
            "template": "city/template/news/index",
            "controller": "\\Boilerplate\\Template\\News\\Index"
        },
        {
            "value": "news-entry",
            "label": {
                "en": "News",
                "fr": "Actualité"
            },
            "template": "city/template/news/entry",
            "controller": "\\Boilerplate\\Template\\News\\Entry"
        },
        {
            "value": "event-list",
            "label": {
                "en": "Events List",
                "fr": "Liste des Événements"
            },
            "template": "city/template/event/index",
            "controller": "\\Boilerplate\\Template\\Event\\Index"
        },
        {
            "value": "event-entry",
            "label": {
                "en": "Event",
                "fr": "Événement"
            },
            "template": "city/template/event/entry",
            "controller": "\\Boilerplate\\Template\\Event\\Entry"
        },
        {
            "value": "grouping",
            "label": {
                "en": "Grouping",
                "fr": "Groupement"
            }
        }
    ],

    "metadata": {
        "paths": [
            "metadata/",
            "vendor/mcaskill/charcoal-support/metadata/",
            "vendor/locomotivemtl/charcoal-cms/metadata/",
            "vendor/locomotivemtl/charcoal-admin/metadata/",
            "vendor/locomotivemtl/charcoal-app/metadata/",
            "vendor/locomotivemtl/charcoal-email/metadata/",
            "vendor/locomotivemtl/charcoal-messaging/metadata/",
            "vendor/locomotivemtl/charcoal-property/metadata/",
            "vendor/locomotivemtl/charcoal-base/metadata/",
            "vendor/beneroch/charcoal-utils/metadata/",
            "vendor/beneroch/charcoal-attachment/metadata/",
            "vendor/locomotivemtl/charcoal-city/metadata/"
        ]
    },

    "modules": {
        "charcoal/admin/admin": {}
    },

    "service_providers": {
        "charcoal/email/service-provider/email": {},
        "charcoal/model/service-provider/model": {},
        "charcoal/admin/service-provider/admin": {},
        "charcoal/ui/service-provider/ui": {},
        "city/service-provider/city": {},
        "city/": {}
    }
}
