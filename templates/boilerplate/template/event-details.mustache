{{!--

Event entry template
====================

usable tags from Event object (inside tag currentEvent):

| TAG              | DESCRIPTION                                | TYPE              |
| ----             | ----                                       | ----              |
| id               | The event id                               | Integer           |
| title            | The event title                            | TranslationString |
| summary          | The event summary                          | TranslationString |
| content          | The event content                          | TranslationString |
| image            | The event image                            | string            |
| displayDate      | The formatted date                         | TranslationString |
| dateTimeDate     | The unformatted date                       | Date              |
| contentBlocks    | The event contentBlocks (flexible content) | Attachments       |
| hasContentBlocks | Check for content blocks                   | boolean           |
| document         | The event document attachments             | Attachments       |
| hasDocument      | Check for documents                        | boolean           |
| gallery          | The event gallery attachments              | Attachments       |
| hasGallery       | Check for gallery attachments              | boolean           |
| url              | The event url                              | TranslationString |
| metaTitle        | The event metaTitle                        | TranslationString |
| nextEvent        | The next event                             | Event             |
| prevEvent        | The previous event                         | Event             |

--}}

{{>boilerplate/partial/site/header}}

{{>boilerplate/partial/site/nav}}

{{>boilerplate/partial/site/breadcrumb}}

{{# currentEvent }}
    <ul>
        <h1>{{title}}</h1>

        <li>id : {{ id }}</li>
        <li>title : {{ title }}</li>
        <li>summary: {{ summary }}</li>
        <li>content: {{ content }}</li>
        <li>image: {{ image }}</li>
        <li>date: {{ date }}</li>
        <li>time: {{ time }}</li>
        {{# hasContentBlocks }}
            {{> boilerplate/partial/content-blocks }}
        {{/ hasContentBlocks }}
        {{# hasDocuments }}
            {{> boilerplate/partial/attachments/ressources }}
        {{/ hasDocuments }}
        {{# hasGallery }}
            {{> boilerplate/partial/attachments/image-gallery }}
        {{/ hasGallery }}
        <li><a href="{{ url }}">{{ url }}</a></li>
        <li>{{ metaTitle }}</li>
        <li>
            prev :
            {{# prevEvent }}
                <ul>
                    <li>title: {{ title }}</li>
                    <li>date: {{ date }}</li>
                    <li><a href="{{ url }}">{{ url }}</a></li>
                </ul>
            {{/ prevEvent }}
        </li>
        <li>
            next :
            {{# nextEvent }}
                <ul>
                    <li>title: {{ title }}</li>
                    <li>date: {{ date }}</li>
                    <li><a href="{{ url }}">{{ url }}</a></li>
                </ul>
            {{/ nextEvent }}
        </li>
    </ul>
{{/ currentEvent }}

{{>boilerplate/partial/site/footer}}
