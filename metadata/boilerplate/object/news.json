{
    "admin": {
        "lists": {
            "default": {
                "list_actions": [
                    {
                        "label": {
                            "fr": "Nouvelle actualité",
                            "en": "Add a news"
                        },
                        "ident": "create",
                        "url": "object/edit?main_menu=section&obj_type=boilerplate/object/news"
                    }
                ],
                "object_actions": {
                    "edit": {
                        "label": {
                            "en": "Modify",
                            "fr": "Modifier"
                        },
                        "url": "object/edit?main_menu=section&obj_type=boilerplate/object/news&obj_id={{id}}",
                        "priority": 1
                    },
                    "view": {
                        "label": {
                            "en": "Go to page",
                            "fr": "Voir l'article"
                        },
                        "url": "{{baseUrl}}{{url}}",
                        "priority": 2
                    },
                    "copy": {
                        "label": {
                            "en": "Clone",
                            "fr": "Cloner"
                        },
                        "url": "object/edit?main_menu=section&obj_type=boilerplate/object/news&clone_id={{id}}",
                        "priority": 3
                    },
                    "delete": {
                        "label": {
                            "en": "Delete",
                            "fr": "Supprimer"
                        },
                        "priority": 4
                    }
                }
            }
        },
        "forms": {
            "default": {
                "groups": {
                    "info_content": {
                        "title": "Info",
                        "show_title": false,
                        "show_header": false,
                        "icon": "info",
                        "properties": [
                            "title",
                            "summary",
                            "content",
                            "image"
                        ],
                        "active": false,
                        "priority": 10
                    },
                    "info_no_content": {
                        "title": "Info",
                        "show_title": false,
                        "show_header": false,
                        "icon": "info",
                        "properties": [
                            "title",
                            "summary",
                            "image"
                        ],
                        "priority": 10
                    },
                    "content": {
                        "title": {
                            "fr": "Contenu",
                            "en": "Content"
                        },
                        "show_title": false,
                        "show_header": false,
                        "icon": "edit",
                        "priority": 20,
                        "type": "charcoal/admin/widget/form-group/attachment",
                        "template": "charcoal/admin/widget/form-group/attachment",
                        "group": "content",
                        "show_attachment_preview": true,
                        "show_attachment_heading": false,
                        "attachable_objects": {
                            "boilerplate/attachment/text": {
                                "label": {
                                    "fr": "Texte",
                                    "en": "Text"
                                }
                            }, "boilerplate/attachment/image": {
                                "label": {
                                    "fr": "Image",
                                    "en": "Image"
                                }
                            }, "boilerplate/attachment/text-image": {
                                "label": {
                                    "fr": "Image avec texte",
                                    "en": "Image with text"
                                }
                            }, "boilerplate/attachment/gallery": {
                                "label": {
                                    "fr": "Gallerie",
                                    "en": "Gallery"
                                }
                            },
                            "boilerplate/attachment/video": {
                                "label": {
                                    "fr": "Vidéo",
                                    "en": "Video"
                                }
                            }
                        }
                    }
                }
            }
        },
        "dashboards": {
            "admin.edit": {
                "widgets": {
                    "form": {
                        "priority": 10,
                        "type": "charcoal/admin/widget/objectForm",
                        "form_ident": "default",
                        "obj_type": "boilerplate/object/news",
                        "group_display_mode": "tab"
                    }
                }
            },
            "admin.table": {
                "widgets": {
                    "form": {
                        "type": "charcoal/admin/widget/table",
                        "collection_ident": "default",
                        "obj_type": "boilerplate/object/news"
                    }
                }
            }
        }
    }
}
