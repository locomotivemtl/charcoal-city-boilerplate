{
    "properties": {
        "category": {
            "obj_type": "city/object/news-category"
        },
        "summary": {
            "type": "text",
            "input_type": "charcoal/admin/property/input/textarea",
            "rows": 10,
            "input_class": "u-resize-vertical"
        },
        "alert": {
            "type": "boolean",
            "label": {
                "fr": "Afficher en tant qu'alerte",
                "en": "Display as an alert"
            }
        },
        "slug": {
            "description": {
                "en": "The part of the url that point to the article on the site",
                "fr": "La partie du url qui pointe vers cet article"
            },
            "notes": {
                "en": "Will be automatically generated if blank",
                "fr": "Sera généré automatiquement si laissé vide"
            }
        }
    },
    "admin": {
        "lists": {},
        "forms": {
            "cms.default": {
                "groups": {
                    "info": {
                        "title": "Info",
                        "show_title": false,
                        "show_header": false,
                        "icon": "info",
                        "properties": [
                            "title",
                            "summary",
                            "image"
                        ],
                        "priority": 10
                    },
                    "cms.content-blocks": {
                        "group": "content",
                        "priority": 200
                    },
                    "advanced": {
                        "title": "Options",
                        "show_title": false,
                        "show_header": false,
                        "icon": "cog",
                        "layout": {
                            "structure": [
                                {"columns": [1]},
                                {"columns": [1]},
                                {"columns": [1, 1, 1]},
                                {"columns": [1, 1, 1]}
                            ]
                        },
                        "properties": [
                            "category",
                            "news_date",
                            "publish_date",
                            "expiry_date",
                            "slug",
                            "alert",
                            "active"
                        ],
                        "priority": 500
                    },
                    "cms.meta": {
                        "priority": 1000
                    },
                    "cms.revisions": {
                        "priority": 8000
                    }
                },
                "sidebars": {
                    "default": {
                        "properties": [
                            "created",
                            "created_by",
                            "last_modified",
                            "last_modified_by"
                        ]
                    }
                }
            }
        },
        "dashboards": {
            "admin.edit": {
                "widgets": {
                    "form": {
                        "priority": 10,
                        "type": "charcoal/admin/widget/objectForm",
                        "form_ident": "default",
                        "group_display_mode": "tab"
                    }
                }
            },
            "admin.table": {
                "widgets": {
                    "form": {
                        "type": "charcoal/admin/widget/table",
                        "collection_ident": "default"
                    }
                }
            }
        }
    }
}
